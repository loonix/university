<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProjetoAluno">

    <DataTemplate x:Key="alunoItemTemplate">
        <StackPanel>
            <TextBlock Text="{Binding Path=Nome}" FontWeight="Bold"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Telefone:" Margin="0 0 5 0"></TextBlock>
                <TextBlock Text="{Binding Path=Telefone}" FontStyle="Italic" ></TextBlock>
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>