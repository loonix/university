        xmlns:local="clr-namespace:Geometria"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ComboBox  x:Name="comboBox1" SelectedIndex="0">
                <ComboBoxItem>Quadrado</ComboBoxItem>
                <ComboBoxItem>Triangulo</ComboBoxItem>
        </ComboBox>
            <Button Click="Button_Click">Adicionar</Button>
